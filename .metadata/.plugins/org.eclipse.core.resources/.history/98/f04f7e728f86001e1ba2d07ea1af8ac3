#define SCHOOL_MEL_NUM 		24
#define JINGLEBELL_MEL_NUM 	26

typedef struct {
	uint16_t freq;
	uint16_t delay;
} _BUZZER;

uint8_t start = 0;
uint8_t seq = 0;
uint8_t stop = 0;

